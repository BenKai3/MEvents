<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.3/jquery-ui.min.js"></script>
<script type="text/javascript">
$(document).ready(function(){
	$('#loginDiv').hide();
	$('#regDiv').hide();
	$('#login_button').hover(function(){
		$('#loginDiv').slideDown();
		$('#regDiv').fadeIn();
	});
	// $('#regDiv').hover(function(){
	// 	$('#loginDiv').slideUp();
	// });
});
</script>
<div id='loginDiv'>
	<%= simple_form_for(:session, :url => sessions_path) do |f| %>
		<table>
			<tr><%= f.input :email %></tr>
			<tr><%= f.input :password %></tr>
			<tr><%= f.button :submit, "Login", class: 'loginButton' %></tr>
		</table>
	<% end %>
	<% if flash[:error] %>
		<p id="errors"><%= flash[:error] %></p>
	<% end %>
	<p id="notice"><%= notice %></p>

</div>
<div id="regDiv">
	<h1>Don't have an account? <a href="/users/new">Register</a></h1>
